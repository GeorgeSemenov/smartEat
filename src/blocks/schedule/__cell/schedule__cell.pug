mixin schedule__cell(modifier)
  - var cl = ""
  if (modifier["cellTitle"] != undefined) || (modifier["cellRows"] != undefined)
    - cl = "schedule__cell"
  td(class=cl)&attributes(attributes)
    +schedule__cell-title(modifier)
    if modifier["cellRows"] != undefined
      each cellRow in modifier.cellRows
        if cellRow["modificator"] == undefined
          - cellRow["modificator"] = "";
        +schedule__cell-row(cellRow)(class=cellRow.modificator)

    +schedule__cell-caption(modifier)