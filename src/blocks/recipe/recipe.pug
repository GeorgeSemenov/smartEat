mixin recipe(modifier)
  if modifier == undefined
    - modifier = {};
  if modifier["instructions"] == undefined
    - modifier["instructions"] = [{}];
  .recipe&attributes(attributes)
    if modifier["mealTime"] != undefined
      +recipe__meal-time(modifier)
    +recipe__recipe-title(modifier)
    +recipe__ingridients(modifier)
    div
      each instruction in modifier.instructions
        if instruction["modificator"] == undefined
          - instruction["modificator"] = "";
        +recipe__instruction(instruction)(class=instruction.modificator)
    +recipe__advices(modifier)  
